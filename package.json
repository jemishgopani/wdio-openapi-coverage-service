{
  "name": "wdio-openapi-service",
  "version": "1.1.0",
  "description": "WebdriverIO service for OpenAPI coverage tracking",
  "type": "module",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc --skipLibCheck",
    "clean": "rimraf build",
    "prebuild": "npm run clean",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:update-snapshots": "NODE_OPTIONS=--experimental-vm-modules jest --updateSnapshot",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "husky"
  },
  "keywords": [
    "webdriverio",
    "wdio",
    "service",
    "openapi",
    "coverage",
    "tracking"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jemishgopani/wdio-openapi-service.git"
  },
  "bugs": {
    "url": "https://github.com/jemishgopani/wdio-openapi-service/issues"
  },
  "homepage": "https://github.com/jemishgopani/wdio-openapi-service#readme",
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@wdio/logger": "^9.4.4",
    "axios": "^1.6.7",
    "openapi-types": "^12.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.30",
    "@types/swagger-parser": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@wdio/cli": ">=8.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
